#!/bin/bash
killall clatd -9
killall tayga -9

ip link delete clat

clatd -c /etc/clat.conf &

clatd -c /etc/clatfi.conf &

sleep 2

ip route del default table rt1
ip rule del from all table rt1
ip rule del to all table rt1
ip route add default via 212.154.12.48 dev ppp0 table rt1
ip rule add from all table rt1
ip rule add to all table rt1
ip route add 10.0.0.0/16 dev eth0 table rt1



ip route del default table rt2
ip rule del from 10.0.0.0/16 table rt2
ip rule del to 10.0.0.0/16 table rt2
ip rule add from 10.0.0.0/16 table rt2
ip rule add to 10.0.0.0/16 table rt2
ip route add 10.0.0.0/16 dev eth0 table rt2
ip route add 10.0.3.0/24 dev ppp1 table rt2

ip rule add from 10.20.1.0/24 table rt2
ip rule add to 10.20.1.0/24 table rt2
ip route add 10.20.1.0/24 dev v-eth1 table rt2

ip route add default dev clat  scope link  metric 2048  mtu 1280 advmss 1240 table rt2

ip route del default table rt4
ip route add 10.0.0.0/16 dev eth0 table rt4

ip route add default dev clatfi  scope link  metric 2048  mtu 1280 advmss 1240 table rt4



ip rule del from 10.0.0.229 table rt1
ip rule del to 10.0.0.229 table rt1

ip rule add from 10.0.0.229 table rt1
ip rule add to 10.0.0.229 table rt1


ip rule del from 10.0.0.188 table rt3
ip rule del to 10.0.0.188 table rt3
ip route del default table rt3

ip route add 10.0.0.0/16 dev eth0 table rt3
ip route add default dev ppp0 table rt3



