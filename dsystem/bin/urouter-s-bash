#!/bin/bash
urouter_dir="/urouter"
source $urouter_dir/urouter.uconf
isi=`echo $1`
if [ -z "$isi" ] ;then echo Ekran Belirtin && exit ; fi

echo $isi
program=`echo $2`
if screen -list | grep -q "TTY$1"; then
echo Ekrana Baglaniyor
screen -x TTY$1
exit
fi

#resize -s 64 160 >> /dev/null



if [ -z "$2" ] ;then echo Program yok Bash çalıştırılıyor &&
program="bash"
fi
screen -d -m -S TTY$isi script --flush --force --append /dev/tty$1 -c "$binlocuconf/urouter-color && $program"
echo $program
